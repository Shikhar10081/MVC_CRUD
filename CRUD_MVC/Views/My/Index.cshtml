@model IEnumerable<Repo_mvc.Model.Employee>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    <!-- very imp if not use not work proper... -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class=" border border-5">
    <p>
        <a asp-action="Create" class="btn  btn-info m-2">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmpId)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmpName)
                </th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpName)
                    </td>
                   
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.EmpId }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EmpId }, new { @class = "btn  btn-warning" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EmpId }, new { @class = "btn btn-danger" })

                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
